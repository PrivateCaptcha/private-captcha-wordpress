{
    "name": "private-captcha/wordpress-plugin",
    "description": "WordPress plugin for Private Captcha integration",
    "type": "wordpress-plugin",
    "require": {
        "php": ">=8.2",
        "private-captcha/private-captcha-php": "*"
    },
    "require-dev": {
        "phpstan/phpstan": "^1.0",
        "wp-coding-standards/wpcs": "^3.0",
        "squizlabs/php_codesniffer": "^3.0",
        "dealerdirect/phpcodesniffer-composer-installer": "^1.0",
        "szepeviktor/phpstan-wordpress": "^1.3"
    },
    "autoload": {
        "psr-4": {
            "PrivateCaptchaWP\\": "includes/"
        }
    },
    "scripts": {
        "lint": "find . -name '*.php' -not -path './vendor/*' -exec php -l {} \\;",
        "analyze": "phpstan analyse --level=8",
        "wpcs": "phpcs -s --standard=phpcs.xml --extensions=php --ignore=vendor/ .",
        "wpcs:fix": "phpcbf --standard=phpcs.xml --extensions=php --ignore=vendor/ ."
    },
    "config": {
        "allow-plugins": {
            "composer/installers": true,
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
